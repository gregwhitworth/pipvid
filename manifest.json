{
    "manifest_version": 2,
    "name": "PIPvid",
    "version": "0.1",
    "description": "Enables JS PIP support for any HTML 5 video element",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*","https://*/*"],
            "css": ["pip.css"]
        }
    ],
    "permissions": [
        "activeTab"
     ],
     "web_accessible_resources": ["icon.png"]
}